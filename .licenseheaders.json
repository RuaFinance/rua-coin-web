{
    "paths": [
      "cex/src/**/*.jsx",
      "cex/src/**/*.tsx",
      "cex/src/**/*.js",
      "cex/src/**/*.ts",
      "**/*.sh"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/*.min.js"
    ],
    "extensions": [".jsx", ".tsx", ".js", ".ts", ".sh"],
    "comment_style": {
        ".jsx": {
            "line_comment": "//"
        },
        ".tsx": {
            "line_comment": "//"
        },
        ".js": {
            "line_comment": "//"
        },
        ".ts": {
            "line_comment": "//"
        },
        ".sh": {
            "line_comment": "#"
        }
    }
}
